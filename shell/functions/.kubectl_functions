connect_pod() {
    if (($# == 0)); then
        echo "${RED}Illegal number of parameters. port number is required${DEFAULT}"
    else
        kubectl exec --stdin --tty "$1" -- /bin/bash
    fi
}

connect_database() {
    if (($# == 0)); then
        echo "${RED}Illegal number of parameters. host name, port number, database username, database name is required${DEFAULT}"
    else
        echo "psql -h $1 -p $2 -U $3 $4"
    fi
}
